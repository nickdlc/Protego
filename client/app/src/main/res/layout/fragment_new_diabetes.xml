<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

xmlns:tools="http://schemas.android.com/tools"
android:layout_width="350dp"
android:layout_height="350dp"
android:gravity="center"
android:orientation="vertical"
tools:context=".onboarding.NewDiabetesFragment">

<TextView
    android:id="@+id/addDiabetesTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="Add Diabetes"
    android:textSize="35sp" />

<Space
    android:layout_width="match_parent"
    android:layout_height="10dp" />

<TextView
    android:id="@+id/diabetesTypeTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Type of Diabetes"
    android:textSize="20sp" />

<Spinner
    android:id="@+id/diabetesTypeSpinner"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:contextClickable="true"
    android:spinnerMode="dropdown"
    android:visibility="visible"
    tools:visibility="visible" />

<TextView
    android:id="@+id/diabetesDateTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Diabetes Diagnosis Date"
    android:textSize="20sp" />

<EditText
    android:id="@+id/diabetesDiagnosisDateEditText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="4dp"
    android:fontFamily="sans-serif"
    android:hint="MM/DD/YYYY"
    android:inputType="date|text"
    />

<TextView
    android:id="@+id/diabetesDoctorTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Doctor who Diagnosed"
    android:textSize="20sp" />

<EditText
    android:id="@+id/diabetesDoctorEditText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="4dp"
    android:fontFamily="sans-serif"
    android:hint="Doctor Name"
    />

</LinearLayout>